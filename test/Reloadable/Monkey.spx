func turnOrStep(where float64) {
	if heading != where {
		turnTo where
	} else {
		step 10
	}
}

onStart => {
	for {
		wait 0.5
		println "Hello spx"
	}
}

onClick => {
	say "You killed me!", 1
	die
}

onKey KeyUp, => {
	turnOrStep Up
}

onKey KeyRight, => {
	turnOrStep Right
}

onKey KeyDown, => {
	turnOrStep Down
}

onKey KeyLeft, => {
	turnOrStep Left
}
